@model IEnumerable<ProjetoControleVendas.Models.Produtos>

@{
    ViewData["Title"] = "Produto";
}

<h1>Produtos</h1>

<p>Página para cadastro de Produtos</p>

<p>
    <a asp-action="Create">Criar novo Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutosID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ProdutosID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ProdutosID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

