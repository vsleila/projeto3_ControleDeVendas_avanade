@model IEnumerable<MiniMundo.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Cliente</h1>

<p>Bem-vindo a página do cliente!</p>
<br />

<p>
    <a asp-action="Create">Cadastrar Novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atividade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atividade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientesID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ClientesID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientesID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
