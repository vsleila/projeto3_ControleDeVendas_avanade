@model IEnumerable<MiniMundo.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>Olá! Seja bem vindo a sua página!</p>

<br />
<p>Escolha uma opção</p>


<p>
    <a asp-action="Create">Novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientesID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ClientesID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientesID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
